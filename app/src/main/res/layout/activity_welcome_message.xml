<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".view.welcome.WelcomeActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="138dp"
        android:layout_height="186dp"
        android:layout_marginStart="203dp"
        android:layout_marginEnd="203dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/welcom"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="298dp"
        android:layout_height="35dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Welcome to Kucingku!"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="261dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_reguler"
        android:text="Where adopting a cat is an exciting journey!"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="307dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="335dp"
        android:layout_height="105dp"
        android:fontFamily="@font/poppins_reguler"
        android:gravity="fill_horizontal"
        android:text="We're here to build connections and create forever homes for our feline friends. Our goals a smooth adoption experience, matching you with the perfect cat companion, and ongoing support for a happy life together."
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="342dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="337dp"
        android:layout_height="59dp"
        android:fontFamily="@font/poppins_reguler"
        android:text="Join us on this heartwarming journey of love, companionship, and countless joyful moments with your furry friend."
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="462dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="With love, Kucingku Team"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="543dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:text="Find A Cat Now"
        android:textColor="@color/darkgrey"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="647dp" />

    <ProgressBar
        android:id="@+id/progressbar_register"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/darkgrey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>