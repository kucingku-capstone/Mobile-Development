<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="138dp"
        android:layout_height="186dp"
        android:layout_marginStart="203dp"
        android:layout_marginEnd="203dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/welcom"
        tools:layout_editor_absoluteY="51dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="144dp"
        android:layout_height="21dp"
        android:text="Welcome to Kucingku!"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="271dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where adopting a cat is an exciting journey!"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="292dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="318dp"
        android:layout_height="92dp"
        android:text="We're here to build connections and create forever homes for our feline friends. Our goals a smooth adoption experience, matching you with the perfect cat companion, and ongoing support for a happy life together."
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="318dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="317dp"
        android:layout_height="58dp"
        android:text="Join us on this heartwarming journey of love, companionship, and countless joyful moments with your furry friend."
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="421dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With love, Kucingku Team"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="509dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="333dp"
        android:layout_height="55dp"
        android:backgroundTint="@color/white"
        android:text="Find A Cat Now"
        android:textColor="@color/darkgrey"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="673dp" />

    <ProgressBar
        android:id="@+id/progressbar_register"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/darkgrey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>